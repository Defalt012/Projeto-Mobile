<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ProjetoMobile.TSelecaoEmpregados"
             BackgroundImage="fundo">
    <ContentPage.Content>
        <StackLayout>
            <BoxView BackgroundColor="#9E005C"
                 InputTransparent="True"
                 Scale="3"
                 HorizontalOptions="FillAndExpand"/>
            <Label Text="Selecione o Fúncionario"
             HorizontalOptions="Center"
             Margin="5,0,5,0"
             FontSize="20"
             TextColor="#EED218"/>

            <StackLayout Orientation="Horizontal">
   
                <ScrollView>
                    <Image x:Name="Imagem1"/>
                    
                    <Image x:Name="Imagem2" />
                    
                    <Image x:Name="Imagem3" />
                
                </ScrollView>

            </StackLayout>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>